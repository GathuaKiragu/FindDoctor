<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiragu.finddoctor.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wallpaper"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Doctor!"
        android:textSize="40sp"
        android:textStyle="bold"
        android:drawablePadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"
        android:id="@+id/headerTextView"/>

    <Button
        android:id="@+id/findDoctorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Doc"
        android:background="@color/colorBg"
        android:layout_marginBottom="38dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/location"
        android:layout_alignEnd="@+id/location"
        android:layout_alignLeft="@+id/saveDoctorButton"
        android:layout_alignStart="@+id/saveDoctorButton" />
    <Button
        android:id="@+id/saveDoctorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SavedDoctors"
        android:background="@color/colorBg"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/findDoctorButton"
        android:layout_alignRight="@+id/headerTextView"
        android:layout_alignEnd="@+id/headerTextView"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location" />

    <EditText
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/headerTextView"
        android:layout_alignStart="@+id/headerTextView"
        android:layout_centerVertical="true"
        android:ems="10"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:drawablePadding="5dp"
        android:inputType="textPersonName"
        android:hint="Location" />

</RelativeLayout>
